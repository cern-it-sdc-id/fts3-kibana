{
    "template": "fts3*",
    "mappings": {
        "fts3_server": {
            "properties": {
                "@fields": {
                    "type": "object",
                    "dynamic": true,
                    "path": "full",
                    "properties": {
                        "command": { "type": "string" },
                        "host":    { "type": "string", "index": "not_analyzed" },
                        "level":   { "type": "string" },
                        "line":    { "type": "integer" },
                        "logtime": { "type": "date", "format": "E MMM dd HH:mm:ss yyyy" },
                        "message": { "type": "string", "index": "not_analyzed" },
                        "method":  { "type": "string" },
                        "source":  { "type": "string", "index": "not_analyzed" },
                        "timestamp": { "type": "date" }
                    }
                }
            }
        },
        "fts3_bringonline": {
            "properties": {
                "@fields": {
                    "type": "object",
                    "dynamic": true,
                    "path": "full",
                    "properties": {
                        "host":    { "type": "string", "index": "not_analyzed" },
                        "level":   { "type": "string" },
                        "line":    { "type": "integer" },
                        "logtime": { "type": "date", "format": "E MMM dd HH:mm:ss yyyy" },
                        "message": { "type": "string", "index": "not_analyzed" },
                        "method":  { "type": "string" },
                        "source":  { "type": "string", "index": "not_analyzed" },
                        "task":    { "type": "string", "index": "not_analyzed" },
                        "user":    { "type": "string", "index": "not_analyzed" },
                        "vo":      { "type": "string", "index": "not_analyzed" },
                        "surl":    { "type": "string" },
                        "timestamp": { "type": "date" },
                        "bulk_size": { "type": "integer" }
                    }
                }
            }
        },
        "httpd_access": {
            "properties": {
                "@fields": {
                    "type": "object",
                    "dynamic": true,
                    "path": "full",
                    "properties": {
                        "auth":  { "type": "string", "index": "not_analyzed" },
                        "bytes": { "type": "integer", "ignore_malformed": true },
                        "clientip": { "type": "ip" },
                        "host":  { "type": "string", "index": "not_analyzed" },
                        "httpversion": { "type": "string", "index": "not_analyzed" },
                        "ident": { "type": "string", "index": "not_analyzed" },
                        "logtime": { "type": "date", "format": "dd/MMM/yyyy:HH:mm:ss Z" },
                        "method": { "type": "string", "index": "not_analyzed" },
                        "requesttime": { "type": "integer" },
                        "resource": { "type": "string" },
                        "response": { "type": "integer" },
                        "timestamp": { "type": "date" }
                    }
                }
            }
        }
    }
}
